{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "::sass-modules/*": ["./src/assets/styles/modules/*"],
      "::sass-modules": ["./src/assets/styles/modules/index.ts"],
      "::types/*": ["./types/*"],
      "::helpers/*": ["./src/helpers/*"],
      "::assets/*": ["./src/assets/*"],
      "::hooks/*": ["./src/hooks/*"],
      "::root/*": ["./src/*"],
      "::cypress/*": ["./cypress/*"]
    },
    "outDir": "build",
    "module": "esnext",
    "target": "es2019",
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": false
  },
  "exclude": ["src/**/__tests__"],
  "include": ["src"]
}
