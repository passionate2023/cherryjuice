{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "test", "build", "**/__tests__/"]
}
