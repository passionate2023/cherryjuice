{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "::sass-modules/*": ["./src/assets/styles/modules/*"],
      "::sass-modules": ["./src/assets/styles/modules/index.ts"],
      "::types/*": ["./src/types/*"],
      "::helpers/*": ["./src/helpers/*"],
      "::graphql/*": ["./src/graphql/*"],
      "::assets/*": ["./src/assets/*"],
      "::shared-components/*": [
        "./src/components/components/shared-components/*"
      ],
      "::hooks/*": ["./src/hooks/*"],
      "::app/*": ["./src/components/components/app/*"],
      "::editor/*": ["./src/components/components/editor/*"],
      "::auth/*": ["./src/components/components/auth/*"],
      "::root/*": ["./src/components/*"],
      "::store/*": ["./src/store/*"],
      "::cypress/*": ["./cypress/*"]
    },
    "target": "es2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "composite": true,
    "lib": ["ES2015", "DOM"]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
