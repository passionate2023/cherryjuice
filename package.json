{
  "name": "cherryjuice",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "scripts": {
    "dev:client": "yarn workspace @cherryjuice/react-client  run dev",
    "dev:server": "yarn workspace @cherryjuice/nest-server  run dev",
    "build:lib:1": "yarn workspace @cherryjuice/graphql-types run build",
    "build:lib:2": "yarn workspace @cherryjuice/ahtml-to-html run build",
    "build:lib2:1": "yarn workspace @cherryjuice/ctb-to-ahtml run build",
    "build:lib2:2": "yarn workspace @cherryjuice/default-settings run build",
    "build:libs": "run-p build:lib:* && run-p build:lib2:*",
    "build:app:1": "yarn workspace @cherryjuice/react-client  run build",
    "build:app:2": "yarn workspace @cherryjuice/nest-server  run build",
    "build:apps": "run-p build:app:*",
    "test:lib:1": "yarn workspace @cherryjuice/graphql-types run test",
    "test:lib:2": "yarn workspace @cherryjuice/ahtml-to-html run test",
    "test:lib2:1": "yarn workspace @cherryjuice/ctb-to-ahtml run test",
    "test:lib2:2": "yarn workspace @cherryjuice/default-settings run test",
    "test:libs": "run-p test:lib:*",
    "test:app:1": "yarn workspace @cherryjuice/react-client  run test",
    "test:app:2": "yarn workspace @cherryjuice/nest-server  run test",
    "test:apps": "run-p test:app:*",
    "test": "run-p test:*",
    "strip:deps": "node scripts/strip-dev-dependencies.js",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|json|css|scss)\"",
    "prettier:validate": "yarn prettier --list-different",
    "prettier:fix": "yarn prettier --write",
    "eslint:validate": "yarn workspaces run eslint",
    "eslint:validate-root": "yarn eslint",
    "eslint:fix": "yarn workspaces run lint --fix",
    "validate": "run-p eslint:validate prettier:validate",
    "fix": "yarn eslint:fix && prettier:fix",
    "commit": "git-cz",
    "dc:pull": "sudo docker-compose pull",
    "dc:rm": "sudo docker-compose rm -f",
    "dc:stop": "sudo docker-compose stop",
    "predc:up": "yarn dc:pull && yarn dc:stop && yarn dc:rm",
    "dc:up": "sudo docker-compose up -d",
    "dc:down": "sudo docker-compose down"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "version": "0.0.1",
  "description": "",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ycnmhd/cherryjuice.git"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "husky": "3.1.0",
    "lint-staged": "^10.4.0"
  },
  "keywords": [
    "cherrytree"
  ],
  "author": "Yacine Mohamdi",
  "license": "ISC",
  "homepage": "https://github.com/ycnmhd/cherryjuice#readme",
  "optionalDependencies": {}
}
