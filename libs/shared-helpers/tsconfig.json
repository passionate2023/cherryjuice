{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "module": "esnext",
    "target": "es2019",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": ["src/**/__tests__", "src/**/*.stories.*"],
  "include": ["src"]
}
